#include "minimalMessageService.fcl"
#include "standardProducers.fcl"
#include "standardServices.fcl"

#include "MuCapG4/test/detectorDefs.fcl"

# Give this job a name.
process_name : mucap

# Start form an empty source
source : {
    module_type : EmptyEvent
    maxEvents : 10
}

services : {

    message               : @local::default_message
    TFileService          : { fileName : "hist_mucap.root" }
    RandomNumberGenerator : { }

    user : {
        GeometryService        : { inputFile      : "MuCapG4/test/geom_mucap.txt"  }
        ConditionsService      : { conditionsfile : "Mu2eG4/test/conditions_01.txt"      }
        GlobalConstantsService : { inputFile      : "Mu2eG4/test/globalConstants_01.txt" }
        G4Helper               : { }
        SeedService            : @local::automaticSeeds

        Geometry : @local::mucapGeometry
    }
}

physics : {

    producers:  {

        generate: {
            module_type : MuCapVtxKludge

            pdgId : 2212

            position : {
                shape : targetCylinder
                radius : 3 // mm
            }

            kineticEnergy : {
                spectrum : MECO
                Tth : 1.4 // MeV
                alpha : 1.3279
                T0 : 3.1 // MeV
            }

            angles : {
                czmin : -1
                czmax : +1
            }

            time : {
                spectrum : exp
                scale : 864. // ns
                min : 0
                max : 10000. // TDC gate end
            }

            kludgePdgId : -13 // mu+ (going backwards)
            kludgeMomentum : { spectrum : flat center : 50 halfWidth : 0 }
            kludgeAngles : { czmin : -1 czmax : -1 }

            histograms : {
                kineticEnergy : {
                    xmin : 0
                    xmax : 100
                    nbins : 500
                }
                momentum : {
                    xmin : 0
                    xmax : 500
                    nbins : 500
                }
            }
        }

        g4run: {
            module_type          : MuCapG4
            //diagLevel            : 2
            //trackingVerbosityLevel : 2
            //simHitsSizeLimit : 0

            generatorModuleLabel : generate

            materials: @local::mucapMaterials

            SDConfig : { enableSD : [] }

//            visMacro             : "MuCapG4/test/vis_mucap.mac"
        }

        randomsaver          : @local::randomsaver

    }

    analyzers : {
        mcparticles : {
            module_type : MuCapSimParticleHist
            inputModuleLabel : "g4run"
            inputInstanceName : ""
        }
        mchits : {
            module_type : MuCapSimHitsHist
            hitsModuleLabel : "g4run"
            hitsInstanceName : "MuCapSimHits"
            particlesModuleLabel : "g4run"

            numEnergyBins : 1000
            ekMin : 0
            ekMax : 100
        }
    }

    p1 : [generate, g4run]
    e1 : [outfile, mcparticles, mchits]

    trigger_paths  : [p1]
    end_paths      : [e1]

}

outputs:  {

    outfile : {
        module_type   :   RootOutput
        fileName      :   "data_mucap.root"
    }

}

//----------------------------------------------------------------
// Limit the amount of "Begin processing the ... record" messages
services.message.destinations.log.categories.ArtReport.reportEvery : 1
services.message.destinations.log.categories.ArtReport.limit : 1
services.message.destinations.log.categories.ArtReport.timespan : 60

// Initialze seeding of random engines: do not put these lines in base .fcl files for grid jobs.
services.user.SeedService.baseSeed         :  0
services.user.SeedService.maxUniqueEngines :  20

